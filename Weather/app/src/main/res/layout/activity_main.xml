<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back2"
    tools:context="com.example.hamzakhan.weather.MainActivity">


    <TextView
        android:id="@+id/Temprature"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_above="@+id/Description"
        android:layout_alignStart="@+id/Day4"
        android:gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#434040"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/Country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:text="Select city"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40dp"
         />

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Select city"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Date"
        android:background="@drawable/search1" />


    <TextView
        android:id="@+id/Day1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="42dp"
        android:text="_"
        android:textColor="#434040"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/Day2"
        android:layout_width="30dp"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/Day1"
        android:text="_" />

    <TextView
        android:id="@+id/Day3"
        android:layout_width="30dp"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/Day1"
        android:text="_" />

    <TextView
        android:id="@+id/Day4"
        android:layout_width="30dp"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/Day1"
        android:text="_" />

    <TextView
        android:id="@+id/Day5"
        android:layout_width="30dp"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Day1"
        android:layout_alignStart="@+id/textView5"
        android:text="_" />
    <TextView
        android:id="@+id/Day6"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Day1"
        android:layout_alignStart="@+id/textView6"
        android:textColor="#434040"
        android:textSize="15dp"
        android:text="_" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Empty" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="100dp"
        android:text="_"
        android:textColor="#434040"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="60dp"
        android:text="_" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="120dp"

        android:text="_" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_marginStart="180dp"
        android:text="_" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_marginStart="240dp"
        android:text="_" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:textColor="#434040"
        android:textSize="15dp"
        android:layout_marginStart="300dp"
        android:text="_" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="-20dp"
        android:text="Fri"
        android:textColor="#646464"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#646464"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Day2"
        android:layout_alignTop="@+id/textView7"
        android:text="Sat" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#646464"
        android:layout_alignStart="@+id/Day3"
        android:layout_alignTop="@+id/textView7"
        android:text="Sun" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Day4"
        android:layout_alignTop="@+id/textView7"
        android:text="Mon"
        android:textColor="#646464"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Day5"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#646464"
        android:layout_alignTop="@+id/textView7"
        android:text="Tue" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Day6"
        android:layout_alignTop="@+id/textView7"
        android:text="Wed"
        android:textColor="#646464"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="-110dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/Day3"
        android:layout_marginLeft="-5dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-110dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/Day2"
        android:layout_marginLeft="-3dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-110dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/Temprature"
        android:layout_marginLeft="-7dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-110dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-13dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-110dp"
        android:layout_toEndOf="@+id/Temprature"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-110dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/Temprature"
        android:layout_toStartOf="@+id/Temprature"
        app:srcCompat="@mipmap/ic_launcher" />


</RelativeLayout>
